        <androidx.constraintlayout.widget.ConstraintLayout android:background="@color/pastelBlue" android:layout_height="match_parent" android:layout_width="match_parent">

        <TextView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/pastelOrange"
            android:text="@string/helplines_given"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/textView7"
            android:layout_margin="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageButton android:layout_height="60dp"
            android:layout_width="60dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/whatsapp_imageBtn"
            android:backgroundTint="#00000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/instagram_imageBtn" app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_whatsapp_ic_icon"/>

        <ImageButton
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/instagram_imageBtn"
            android:backgroundTint="@color/transparent"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/gmail_imageBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_instagram_sketched"
            app:layout_constraintStart_toEndOf="@+id/whatsapp_imageBtn"/>

        <ImageButton android:layout_height="60dp"
            android:layout_width="60dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/gmail_imageBtn"
            android:backgroundTint="@color/transparent"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/twitter_imageBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_gmail"
            app:layout_constraintStart_toEndOf="@+id/instagram_imageBtn"/>

        <ImageButton
            android:layout_height="60dp"
